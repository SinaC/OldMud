    if ( !this.done && this.hit() <= this.getAttr("hp")/5 ) {
      if ( chance(50) )
        this.room().oLoad(21525);
      else
        this.room().oLoad(21526);
      this.done = 1;
      this.timer = 0;
    }
  }
}

