  onPulseMobile() {
    if ( this.timer == 30 ) { // every 30*4 seconds : 2 minutes
      this.done = 0;
      this.timer = -1;
    }
    else if ( this.timer >= 0 )
      this.timer = this.timer + 1;

    if ( chance(2) )
      `groan
  }
  onFight( act ) {
    if ( chance(20) ) {
      this.echo("{RBits of rotting flesh fly from the zombie as it battles!{x");
      `moan
